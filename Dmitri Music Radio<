      <input id="chat-name" type="text" placeholder="Tu nombre" />
      <input id="chat-text" type="text" placeholder="Escribe un mensaje" />
      <button onclick="sendChat()">Enviar</button>
    </section>

  </div>

  <script>
    // Sistema simple de pedidos (local)
    function sendRequest() {
      const name = document.getElementById('req-name').value;
      const song = document.getElementById('req-song').value;
      if(!name || !song){
        document.getElementById('req-msg').innerText = 'Completa ambos campos.';
        return;
      }
      document.getElementById('req-msg').innerText = `Gracias ${name}, tu pedido fue enviado: ${song}`;
      document.getElementById('req-name').value = '';
      document.getElementById('req-song').value = '';
    }

    // Chat básico local
    function sendChat(){
      const name = document.getElementById('chat-name').value;
      const text = document.getElementById('chat-text').value;
      if(!name || !text) return;
      const box = document.getElementById('chat-box');
      const msg = document.createElement('div');
      msg.className = 'msg';
      msg.innerHTML = `<b>${name}:</b> ${text}`;
      box.appendChild(msg);
      box.scrollTop = box.scrollHeight;
      document.getElementById('chat-text').value = '';
    }
  </script>
