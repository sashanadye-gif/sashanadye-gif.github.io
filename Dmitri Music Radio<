      <h2>Pide tu Canción</h2>
      <input id="req-name" type="text" placeholder="Tu nombre" />
      <input id="req-song" type="text" placeholder="Canción a solicitar" />
      <button onclick="sendRequest()">Enviar Pedido</button>
      <p id="req-msg"></p>
    </section>

    <!-- CHAT -->
    <section class="chat-section">
      <h2>Chat en vivo</h2>
